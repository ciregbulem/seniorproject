      <!-- Container for registration form -->
      <div class="container">
        <!-- Row for registration form-->
        <div class="row">
          <!-- Column for quote -->
          <div class=" col-md-8 col-lg-8">
            <blockquote>
              <p>This could change the health insurance industry forever.</p>
              <footer>Flow from <cite title="Source Title">Progressive</cite></footer>
            </blockquote>
          </div>
          <!-- Column for registration form -->
          <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <h1>Create <small>New Account</small></h1>
                
                <%= bootstrap_form_for :client, url: clients_path do |f| %>

                <p>
                  <%= f.text_field :fname, label: "First Name:", placeholder: "First Name", autofocus: true  %>
                </p>
                
                <p>
                  <%= f.text_field :lname, label: "Last Name", placeholder: "Last Name" %>
                </p>
               
                <p>
                  <%= f.email_field :email, prepend: "@", label: "Email", placeholder: "Email"%>
                </p>
                
                <p>
                  <%= f.password_field :password, label: "Password", placeholder: "Password", help: "Must be at least 6 characters long" %>
                </p>
                
                <p>
                  <%= f.password_field :password_confirmation, class: "has-warning", label: "Confirm Password", placeholder: "Confirm Password" %>
                </p>
                
                <p>
                  <%= f.submit "Create", class: "btn btn-success btn-md" %>
                </p>
              <% end %>
            </div>
          </div> <!-- Panel for registration form-->
        </div> <!-- Column for registration form -->
