<html>
  <body background="http://i.imgur.com/rNJFSI9.jpg" style="background-position: right top;">
    <div>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
              <img alt="Gist" src="http://i.imgur.com/dcGnzPz.png" height="23.69" width="64.93">
            </a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
            <form class="navbar-form navbar-right hidden-xs" role="form">
              <div class="form-group">
                <input type="text" placeholder="Email" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" placeholder="Password" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">Sign in</button>
            </form>
          </div><!--/.navbar-collapse -->
        </div>
      </nav>
    </div>
      <br>
      <br>
      <br>

      <div class="container">
        <div class="row">
          <div class=" col-md-8 col-lg-8">
            <!--<img src="http://i.imgur.com/sHCFvui.png" class="img-responsive img-thumbnail" alt="fitbit" height="62.5" width="250">-->
            <blockquote>
              <p>This could change the health insurance industry forever.</p>
              <footer>Flow from <cite title="Source Title">Progressive</cite></footer>
            </blockquote>
          </div>
          <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <h1>Create <small>New Account</small></h1>
                
                <%= bootstrap_form_for :client, url: clients_path do |f| %>
                <p>
                  <%= f.text_field :fname, label: "First Name:", placeholder: "First Name" %>
                </p>
                
                <p>
                  <%= f.text_field :lname, label: "Last Name", placeholder: "Last Name" %>
                </p>
               
                <p>
                  <%= f.text_field :email, prepend: "@", label: "Email", placeholder: "Email" %>
                </p>
                
                <p>
                  <%= f.password_field :password, label: "Password", placeholder: "Password", help: "Must be at least 6 characters long" %>
                </p>
                
                <p>
                  <%= f.password_field :password_confirmation, label: "Confirm Password", placeholder: "Confirm Password" %>
                </p>
                
                <p>
                  <%= f.submit "Create", class: "btn btn-success btn-md" %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
      
      
  </body>
</html>